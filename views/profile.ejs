<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head') %>

<body>

    <%-include('./partials/header') %>
    
    <div class="container container-edit">
        <div class="row">
            <section class="menu-var col-xs-12 col-sm-12 col-md-12 col-lg-4  izquierda">
                <article class="menu-edit" >
                    <div class="avatar">
                    <img src="/users/avatars/<%= usuario.avatar%>" alt="Avatar Usuario">
                    <p class="nameuser"><%= usuario.first_name %></p>
                    </div>
                    <div class="menu-editar">
                    <ul>
                        <form action="/user/profile/deslog/<%= usuario.id%>" method="POST">
                        <button type="submit"><li><a>Salir</a></li></button>
                        </form>
                    </ul>
                    </div>
                </article>
            </section>
            <br>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-8 derecha">
                <div class="mensaje-DTS">
                    <p>Mis Datos</p>

                    <div class="errors"></div>
                    
                    <% if (typeof errors != "undefined") { %>
                        <ul class="errors">
                       <% for(var i= 0; i < errors.length; i++) { %>
                         <li><span><strong><%= errors[i].msg %></strong></span></li>
                        <% } %>
                        </ul>
                    <% } %> 
                    
                </div>

                
                <form class="editProfile"action="/user/profile/edit/<%= usuario.id %>" method="POST" enctype="multipart/form-data">
                    <div class="row row-inputs">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 ">
                            <label for="email">Correo</label>
                            <input style="cursor: not-allowed;" value="<%if( usuario.email != ""){ %><%= usuario.email %><% } %>" disabled="disabled"  type="email" class="form-control" id="email" name="email" required>
                        </div>    
                    
                    
                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 ">
                            <label for="contraseñia">Nueva Contraseña</label>
                            <input type="password" class="form-control password" id="password" name="password" >
                        </div>    
                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 ">
                            <label for="contraseñia">Repetir Contraseña</label>
                            <input type="password" class="form-control password2" id="password2" name="password2">
                        </div>    
                    

                    
                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 ">
                            <label for="nombre">Nombre</label>
                            <input type="text" value="<%if( usuario.first_name != ""){ %><%= usuario.first_name %><% } %>" class="form-control  first_name" id="name" name="first_name" >
                        </div>    
                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 ">
                            <label for="contraseñia">Apellido</label>
                            <input type="text" value="<%if( usuario.last_name != ""){ %><%= usuario.last_name %><% } %>" class="form-control last_name" id="apellido" name="last_name" >
                        </div>    
                    

                    
                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 ">
                            <label for="dni">DNI</label>
                            <input type="text" value="<%if( usuario.dni != ""){ %><%= usuario.dni %><% } %>" class="form-control" id="dni" name="dni" >
                        </div>    
                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 ">
                            <label for="telefono">Telefono</label>
                            <input type="text" value="<%if( usuario.tel != ""){ %><%= usuario.tel %><% } %>" class="form-control" id="tel" name="tel" >
                        </div>      
                    

                    
                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 ">
                            <label for="direccion">Direccion</label> <span>*</span>
                            <input type="tel" value="<%if( usuario.direccion != ""){ %><%= usuario.direccion %><% } %>" class="form-control" id="direccion" name="direccion">
                        </div> 

                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 ">
                            <label for="direccion">Cambiar Imagen</label> <span>*</span>
                            <input type="file"  class="form-control" id="image" name="avatar">
                        </div> 
                        
                        <br>
                        <div class="container-bt">
                        <button type="sumbit" class="btn btn-success btn-edituser">Guardar</button>
                        </div>
                    </div>
               
                    
                </form>
            </div>
        </div>
    </div>
    <%-include('./partials/footer') %>
    <%-include('./partials/scripts') %>
    <script src="/javascript/profile.js"></script>
</body>
</html>