<!DOCTYPE html>
<html>
  <%- include('./partials/head') %> 
  <body>
    <%- include('./partials/header') %> 
    
    <div id="carouselExampleIndicators" class="carousel slide imagenes-principales" data-ride="carousel">
      <div class="titulo-principal">
        <h1>Últimos Lanzamientos</h1>
      </div>
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner carrucel-imagenes">
          <div class="carousel-item active">
        
            <% if ( user == undefined || user.is_admin == "no") { %>
            <a href="/user/detail/<%= banner[0].id %>"><img src="/images/productos/<%= banner[0].image %>" class="d-block w-100" alt="..."></a> 
            <% } else if (user && user.is_admin == "yes") { %>
              <a href="/products/<%= banner[0].id %>"><img src="/images/productos/<%= banner[0].image %>" class="d-block w-100" alt="..."></a>
            <% } %>
          </div>
        <% for(var i = 1; i < banner.length; i++){ %>
          <div class="carousel-item">
            <% if ( user == undefined || user.is_admin == "no") { %>
              <a href="/user/detail/<%= banner[i].id %>"><img src="/images/productos/<%= banner[i].image %>" class="d-block w-100" alt="..."></a> 
              <% } else if (user && user.is_admin == "yes") { %>
                <a href="/products/<%= banner[i].id %>"><img src="/images/productos/<%= banner[i].image %>" class="d-block w-100" alt="..."></a> 
                <% }%>
              </div>
        <% }%>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

    <div class="titulo-secundario">
      <h2>Los Más Populares</h2>
    </div>

    <div class="container">
      <div class="row">
        <% populares.forEach(function(populares){ %> 
        <div class="col-xs-6 col-sm-6 col-md-4 col-lg-3">
          <div class="producto">
            <h3 class="titulo"><%= populares.product_name %> </h3>
            <% if ( user == undefined || user.is_admin == "no") { %>
              <a href="/user/detail/<%= populares.id %>"><img class="producto-img" src="/images/productos/<%= populares.image %>" alt="<%= populares.product_name %>"></a>
              <% } else if (user && user.is_admin == "yes")  { %>
                <a href="/products/<%= populares.id %>"><img class="producto-img" src="/images/productos/<%= populares.image %>" alt="<%= populares.product_name %>"></a>
                <%  } %>
            </div>
        </div>
      <% }) %> 
    </div>
  </div>
  
  <div class="titulo-ofertas">
    <h2 id="ttofertas">OFERTAS</h2>
  </div-titulo-ofertas>

  <div class="container">
    <div class="row">
      <% ofertas.forEach(function(ofertas){ %> 
        <div class="col-xs-6 col-sm-6 col-md-4 col-lg-3">
          <div class="producto">
            <h3 class="titulo"><%= ofertas.product_name %> </h3>
            <% if ( user == undefined || user.is_admin == "no") { %>
              <a href="/user/detail/<%= ofertas.id %>"><img class="producto-img" src="/images/productos/<%= ofertas.image %>" alt="<%= populares.product_name %>"></a>
            <% } else if (user && user.is_admin == "yes")  { %>
              <a href="/products/<%= ofertas.id %>"><img class="producto-img" src="/images/productos/<%= ofertas.image %>" alt="<%= populares.product_name %>"></a>
           <%  } %>            
            <div class="ofertas"><%= ofertas.discount%>%</div>
          </div>
        </div>
      <% }) %> 
  </div>
</div>

  <%- include('./partials/footer') %> 
    
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>
